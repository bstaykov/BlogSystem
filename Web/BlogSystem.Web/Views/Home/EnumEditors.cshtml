@using BlogSystem.Web.ViewModels
@model EnumModel

@{
    ViewBag.Title = "EnumEditors";
}

@Html.Partial("_TestLinks")

@if (TempData["success"] != null)
{
    <div class="alert alert-dismissable alert-success">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <strong>Well done!</strong> You successfully choose <a href="#" class="alert-link">@TempData["success"]</a>.
    </div>
}
<br />

@using (Html.BeginForm("EnumEditors", "Home", FormMethod.Post, new { id = "formToSend", @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Form</legend>
        <div class="form-group">
            @Html.LabelFor(m => m.Color, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">
                @Html.EnumDropDownListFor(m => m.Color, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Color)
            </div>
        </div>
        @*<div>
                @Html.DropDownListFor(model => model.Color, Enum.GetNames(typeof(BlogSystem.Web.ViewModels.ColorType)).Select(e => new SelectListItem { Text = e }))
            </div>*@
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                @Html.Submit("Submit", "btn btn-primary")
            </div>
        </div>
    </fieldset>
}

<a class="glyphicon glyphicon-trash"></a>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

