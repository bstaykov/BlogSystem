@using BlogSystem.Web.ViewModels

@model TestDateTimeComplexInputModel

@Html.Partial("_TestLinks")

@if (TempData["success"] != null)
{
    @TempDataHelpers.TempMessage(@TempData["success"].ToString())
}
else if (TempData["error"] != null)
{
    @TempDataHelpers.TempMessage(@TempData["error"].ToString(), "warning")
}

@using (Html.BeginForm("TestDateTimeComplex", "Home", FormMethod.Post, new { id = "formToSend" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary()

    @Html.EditorFor(m => m.DateAdded, new { startYear = 2014 })

    @Html.Submit("Submit")
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
