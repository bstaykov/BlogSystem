@using BlogSystem.Web.ViewModels

@model PaginationModel

<nav id="paggingMenu">
    <ul class="pagination">
        @if (@Model.CurrentPage > 1)
        {
            var previousPage = (@Model.CurrentPage - 1);
            <li>
                @Ajax.RawActionLink(string.Format("<span aria-hidden='true'>&laquo;</span>"), @Model.ViewName, @Model.ControllerName, new { pageNumber = @previousPage, area = @Model.AreaName },
                        new AjaxOptions
                        {
                            InsertionMode = InsertionMode.Replace,
                            UpdateTargetId = "postsShown",
                            LoadingElementId = "loading",
                            HttpMethod = "Get",
                        },
                        new { aria_label = "Previous" })
            </li>
        }
        else
        {
            <li class="disabled">
                <a href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        }

        @for (int i = @Model.StartPage; i <= @Model.EndPage; i++)
        {
            if (i == @Model.CurrentPage)
            {
                <li class="active"><a href="#">@i<span class="sr-only">(current)</span></a></li>
            }
            else
            {
                <li>
                    @Ajax.ActionLink(i.ToString(), @Model.ViewName, @Model.ControllerName, new { pageNumber = i, area = @Model.AreaName },
                            new AjaxOptions
                            {
                                InsertionMode = InsertionMode.Replace,
                                UpdateTargetId = "postsShown",
                                LoadingElementId = "loading",
                                HttpMethod = "Get",
                            })
                </li>
            }
        }
        @if (@Model.CurrentPage < @Model.EndPage)
        {
            var nextPage = (@Model.CurrentPage + 1);
            <li>
                @Ajax.RawActionLink(string.Format("<span aria-hidden='true'>&raquo;</span>"), @Model.ViewName, @Model.ControllerName, new { pageNumber = @nextPage, area = @Model.AreaName },
                        new AjaxOptions
                        {
                            InsertionMode = InsertionMode.Replace,
                            UpdateTargetId = "postsShown",
                            LoadingElementId = "loading",
                            HttpMethod = "Get",
                        },
                        new { aria_label = "Next" })
            </li>
        }
        else
        {
            <li class="disabled">
                <a href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        }
    </ul>
</nav>
