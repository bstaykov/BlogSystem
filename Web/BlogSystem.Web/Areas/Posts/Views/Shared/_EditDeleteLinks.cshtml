@model int

@Ajax.ActionLink("Edit", "EditPost", "Home", new { id = @Model, area = "Posts" },
        new AjaxOptions
        {
            InsertionMode = InsertionMode.Replace,
            UpdateTargetId = @Model.ToString(),
            LoadingElementId = "loading",
            HttpMethod = "Get",
        },
             htmlAttributes: new { @class = "glyphicon glyphicon-edit", Title = "Edit" })
@Ajax.ActionLink("Delete", "DeletePost", "Home", new { id = @Model, area = "Posts" },
        new AjaxOptions
        {
            InsertionMode = InsertionMode.Replace,
            UpdateTargetId = @Model.ToString(),
            LoadingElementId = "loading",
            Confirm = "Delete?",
            HttpMethod = "Post",
        },
        htmlAttributes: new { @class = "glyphicon glyphicon-trash", Title = "Delete" })