@helper ProgressBar(string id = "loading", int width = 50, string alertType = "success")
{
    <div class="progress" id="@id" style="display: none;">
        <div class="progress-bar progress-bar-@alertType progress-bar-striped active" role="progressbar" aria-valuenow="@width" aria-valuemin="0" aria-valuemax="100" style="width: @width%">
            <span class="sr-only">@width% Complete (@alertType)</span>
        </div>
    </div>
}